<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.gallery.GalleryFragment">


    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />
    <ImageView
        android:layout_width="397dp"
        android:layout_height="90dp"
        android:src="@drawable/symbol"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:text="Food Samaritans"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="397dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="Are you a Food Samaritan?"
        android:textAlignment="center"
        android:textColor="#CC1717"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:src="@drawable/bakery" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="#FF0000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="#FF0000"
            android:text="Select the boxes if you:"
            android:textAlignment="center"
            android:textColor="#F6F3F3"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:background="#FF0000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="Never overbuy stuff and keep record of what you have bought and used" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="#FF0000"
        android:text="Check use-by dates rather than Best Before dates"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="#FF0000"
        android:text="Use the left-overs"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:background="#FF0000"
        android:layout_marginTop="10dp"
        android:text="Check the Refrigerator Temperature"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="#FF0000"
        android:text="Store your food properly in FIFO manner"

        android:textColor="@color/white" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Score-"/>
</LinearLayout>